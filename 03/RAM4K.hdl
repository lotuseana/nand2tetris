/**
 * Memory of 4K 16-bit registers.
 * If load is asserted, the value of the register selected by
 * address is set to in; Otherwise, the value does not change.
 * The value of the selected register is emitted by out.
 */
CHIP RAM4K {
    IN in[16], load, address[12];
    OUT out[16];

    PARTS:
    DMux8Way(in= load, sel= address[9..11], a= b0, b= b1, c= b2, d= b3, e= b4, f= b5, g= b6, h= b7);
    RAM512(in= in, load= b0, address= address[0..8], out= a0);
    RAM512(in= in, load= b1, address= address[0..8], out= a1);
    RAM512(in= in, load= b2, address= address[0..8], out= a2);
    RAM512(in= in, load= b3, address= address[0..8], out= a3);
    RAM512(in= in, load= b4, address= address[0..8], out= a4);
    RAM512(in= in, load= b5, address= address[0..8], out= a5);
    RAM512(in= in, load= b6, address= address[0..8], out= a6);
    RAM512(in= in, load= b7, address= address[0..8], out= a7);
    Mux8Way16(a= a0, b= a1, c= a2, d= a3, e= a4, f= a5, g= a6, h= a7, sel= address[9..11], out= out);
}